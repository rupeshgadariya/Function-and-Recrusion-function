/*  Write a function to search all occurrences of a given character in a given string. 
    Result of search is a list of indices to be stored in the given array. [ void 
    search_all_occurrences (char *str, char ch, int *arr); ]     */
#include<stdio.h>
#include<string.h>

    void search(char *str, char ch, int *arr)
    {
        int i=0, x=0;
       while (str[i])
       {
            i++;
       }
       char temp[i];
       strcpy(temp,str);
       strupr(temp);
       if(ch>='a' && ch<='z')
        ch=ch-32;

        for ( i = 0; temp[i]; i++)
          if(temp[i]==ch)
           {
             arr[x]=i;
             x++;
           }

    }    



    int main()
{   
     int x[30]={0};
    char str[30],ch;

   printf("Enter string : ");
   fgets(str,30,stdin);
   printf("Enter search character : ");
   scanf("%c",&ch);

  search(str, ch, x);
  
  for (int i = 0; x[i]; i++)
   printf("%d  ",x[i]);
  

    return 0;
}
