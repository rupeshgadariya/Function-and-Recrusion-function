// Write a function to convert a given string into lowercase. 
#include<stdio.h>

void lwr(char *str)
{
    for (int i = 0; str[i]; i++)
     if (str[i]>='A' && str[i]<='Z')
       str[i]=str[i]+32;
    
}


    int main()
{
        char ar[30]="MY Fav Hero";
        puts(ar);
        lwr(ar);
        puts(ar);
        
    return 0;
}
