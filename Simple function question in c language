#include<stdio.h>
#include<conio.h>
   
//  1. Write a function to calculate the area of a circle. (TSRS)
     
        float p1(int x)
        {
            return(3.14*(x*x));
        }


// 2. Write a function to calculate simple interest. (TSRS) 
    
        float p2(int p,int r,int t)
        {
            return( (p*r*t)/100 );
        }

/*  3. Write a function to check whether a given number is even or odd. Return 1
        if the number is even, otherwise return 0. (TSRS)          */
    
        int p3(int x)
        {
            return( x%2==0 );
        }

// 4. Write a function to print first N natural numbers (TSRN)

        void p4(int x)
        {
            for (int i = 1; i <= x; i++)
                printf("%d  ",i);
        }

// 5. Write a function to print first N odd natural numbers. (TSRN)

        void p5(int x)
        {
            for (int i = 1; i <=x; i++)
            printf("%d  ",i*2-1);
        }
