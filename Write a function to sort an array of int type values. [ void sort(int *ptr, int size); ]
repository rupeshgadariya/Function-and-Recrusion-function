// Write a function to sort an array of int type values. [ void sort(int *ptr, int size); ] 
#include<stdio.h>

  void sort( int *str, int size)
  {   
      int temp;
    for(int j=0; j<size; j++)
     for (int i = 0; i<size-j; i++)
      if( str[i]>str[i+1] )
       {
          temp = str[i];
          str[i] = str[i+1];
          str[i+1] = temp;
    
       }
  }


    int main()
{
        int arr[10]={12,56,4,1,00,4,25,55,13,45};
        for(int i=0; i<10; i++)
        printf("%d   ",arr[i]);
        printf("\n");
        sort(arr,10);
           for(int i=0; i<10; i++)
        printf("%d   ",arr[i]);
        printf("\n");

        
    return 0;
}
